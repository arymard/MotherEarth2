<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="190dp">


    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            tools:context=".AdapterBerita">


        <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="270.02dp"
                android:background="@drawable/line_shape"
        />

        <View
                android:id="@+id/imggempa"
                android:layout_width="114dp"
                android:layout_height="107dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/gambargempa"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

        />

        <TextView
                android:id="@+id/judul"
                android:text="INI JUDUL"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textAppearance="@style/korban_gemp"
                android:paddingLeft="7dp"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toRightOf="@id/imggempa"
                android:layout_marginLeft="11dp"
        app:layout_constraintTop_toBottomOf="@+id/line"/>

        <TextView
                android:layout_width="250dp"
                android:layout_height="146dp"
                android:id="@+id/para"
                android:text="blablabll bl alla la llab lal l abla lal bla lal"
                app:layout_constraintLeft_toRightOf="@id/imggempa"
                app:layout_constraintTop_toBottomOf="@id/judul"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:paddingRight="7dp"
                app:layout_constraintRight_toRightOf="parent"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waktu"
                android:text="5m"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="67dp"
                android:layout_marginBottom="2dp"
                />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>